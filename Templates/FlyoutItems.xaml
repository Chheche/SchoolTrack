<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetDevTest.Templates.FlyoutItems"
             x:Name="this">
            

    <Grid
        ColumnDefinitions="Auto, *"
        BindingContext="{x:Reference this}"
        ColumnSpacing="20"
        Margin="15,10">

        <Image
            Source="{Binding Icon}"
            WidthRequest="30"
            HeightRequest="40"/>

        <Label
            FontSize="Medium"
            FontAttributes="Bold"
            Grid.Column="1"
            Text="{Binding Title}"
            VerticalTextAlignment="Center"
            TextColor="Black"/>

    </Grid>
    
</ContentView>
